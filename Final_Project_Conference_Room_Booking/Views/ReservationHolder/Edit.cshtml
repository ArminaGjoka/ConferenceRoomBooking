@model ReservationHolder

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Reservation</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CardNumber">CardNumber</label>
                <input type="text" class="form-control mb-3" asp-for="CardNumber" placeholder="Please insert your Card Number">
                <span asp-validation-for="CardNumber" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Please insert your Name">
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Surname">Surname</label>
                <input type="text" class="form-control" asp-for="Surname" placeholder="Please insert your Surname">
                <span asp-validation-for="Surname" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="Please insert your E-mail">
                <span asp-validation-for="Email" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="PhoneNumber">PhoneNumber</label>
                <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="Please insert your Phone Number">
                <span asp-validation-for="PhoneNumber" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Notes">Notes</label>
                <input type="text" class="form-control" asp-for="Notes" placeholder="Here you can put all your Notes">
                <span asp-validation-for="Notes" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="BookingId">BookingId</label>
                <input type="text" class="form-control" asp-for="BookingId">
                <span asp-validation-for="BookingId" class=" alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
        <a asp-controller="ReservationHolder" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }