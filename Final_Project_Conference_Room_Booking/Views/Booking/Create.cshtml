@model Booking


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add new Booking</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Code"> Code </label>
                <select class="form-control mb-3" asp-for="Code" placeholder="Please insert your Code">
                        <option value="A101">A101</option>
                        <option value="B100">B100 </option>
                        <option value="C001">C001</option>
                        <option value="C002">C002</option>
                  </select>
                <span asp-validation-for="Code" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Capacity">Capacity</label>
                <input type="number" class="form-control mb-3" asp-for="Capacity" placeholder="The number requested cannot exceed the maximum capacity of 30">
                <span asp-validation-for="Capacity" class=" alert-danger"></span>
            </div>
              <div class="form-group col-md-6">
                <label asp-for="RoomId">RoomId</label>
                <input type="number" class="form-control mb-3" asp-for="RoomId" placeholder="Please insert the Room Id">
                <span asp-validation-for="RoomId" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="StartDate">StartDate</label>
                <input type="datetime-local" class="form-control" asp-for="StartDate" placeholder="Please insert the Start Date of your reservation">
                <span asp-validation-for="StartDate" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="EndDate">EndDate</label>
                <input type="datetime-local" class="form-control" asp-for="EndDate" placeholder="Please insert the End Date of your reservation">
                <span asp-validation-for="EndDate" class=" alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Booking" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }